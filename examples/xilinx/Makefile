# To simulate Xilinx specific SystemVerilog netlists the environment
# variable XILINX should point to the root of the Xilinx software
# tools installation directory e.g.
#    ...../vivado/2018.3

.PHONY: all coq minimize-requires clean _CoqProject

################################################################################
# Test VCD waveforms to be generated by Verilator test benches.                #
################################################################################

SV = adder8.sv xadder_tree4_8.sv xadder_tree64_8.sv
#    xadder_tree64_128.sv

BENCHES = $(SV:.sv=_tb.sv)
CPPS = $(SV:.sv=_tb.cpp)
VCDS = $(SV:.sv=_tb.vcd)

.PRECIOUS: $(VCDS)

all:		coq $(BENCHES)
tests:		$(VCDS)
small:		xadder_tree4_8_tb.vcd

extraction:	$(SV)

VERILATOR = verilator +1800-2012ext+sv verilator.vlt -y $(XILINX)/data/verilog/src/unisims
VLINT = $(VERILATOR) --lint-only

_CoqProject:    $(shell find . -name '*.v' | sort)
		@echo "INSTALLDEFAULTROOT = XilinxExamples" > _CoqProject
		@echo "-R . XilinxExamples" >> _CoqProject
		@echo "-R ../../cava/Cava Cava" >> _CoqProject
		@echo "-R ../../third_party/coq-ext-lib/theories ExtLib" >> _CoqProject
		@echo "-R ../../third_party/bedrock2/deps/coqutil/src/coqutil coqutil" >> _CoqProject
		@printf '%s\n' $^ >> _CoqProject

Makefile.coq:	_CoqProject
		coq_makefile -f _CoqProject -o Makefile.coq

coq:		Makefile.coq
		$(MAKE) -f Makefile.coq

minimize-requires: coq
	../../tools/minimize-requires.sh
	$(MAKE) coq

%.vo:		Makefile.coq
		$(MAKE) -f Makefile.coq $@

ExamplesSV:	coq ExamplesSV.hs
		ghc -O2 --make ExamplesSV.hs
		./ExamplesSV

$(SV) $(BENCHES) $(CPPS):	ExamplesSV

obj_dir/V%_tb:	%.sv %_tb.sv %_tb.cpp
		$(VERILATOR) --trace --cc --top-module $*_tb $*_tb.sv $*.sv --exe $*_tb.cpp
		make -C obj_dir -f V$*_tb.mk V$*_tb

%_tb.vcd:	obj_dir/V%_tb
		$<

lutNAND_tb.vcd:	lutNAND.sv lutNAND_tb.sv lutNAND_tb.tcl
		vivado -mode tcl -source lutNAND_tb.tcl
		mv lutNAND/lutNAND.sim/sim_1/behav/xsim/lutNAND_tb.vcd .

clean:
	-@$(MAKE) -f Makefile.coq clean
	rm -f _CoqProject Makefile.coq
	git clean -Xfd
	rm -rf obj_dir
