.PHONY: all coq minimize-requires clean aes _CoqProject

################################################################################
# Test VCD waveforms to be generated by Verilator test benches.                #
################################################################################

SV = mux2_1.sv fullAdder.sv adder445.sv adder88810.sv adder444_tree_4.sv growth_tree_8.sv counter_3.sv signaling_counter.sv fir.sv

BENCHES = $(SV:.sv=_tb.sv)
CPPS = $(SV:.sv=_tb.cpp)
VCDS = $(SV:.sv=_tb.vcd)

all:		coq $(VCDS)

VERILATOR = verilator +1800-2012ext+sv verilator.vlt
VLINT = $(VERILATOR) --lint-only

_CoqProject:    $(shell find . -name '*.v' | sort)
		@echo "INSTALLDEFAULTROOT = ArrowExamples" > _CoqProject
		@echo "-R . ArrowExamples" >> _CoqProject
		@echo "-R ../cava/Cava Cava" >> _CoqProject
		@echo "-R ../third_party/coq-ext-lib/theories ExtLib" >> _CoqProject
		@echo "-R ../third_party/bedrock2/deps/coqutil/src/coqutil coqutil" >> _CoqProject
		@printf '%s\n' $^ >> _CoqProject

Makefile.coq:	_CoqProject
		coq_makefile -f _CoqProject -o Makefile.coq

coq:		Makefile.coq
		$(MAKE) -f Makefile.coq

minimize-requires: coq
	../tools/minimize-requires.sh
	$(MAKE) coq

%.vo:		Makefile.coq
		$(MAKE) -f Makefile.coq $@

ArrowExamplesSV:	coq ArrowExamplesSV.hs *.hs
			ghc --make ArrowExamplesSV.hs
			./ArrowExamplesSV

$(SV) $(BENCHES) $(CPPS) $(VCDS):	coq ArrowExamplesSV

.PRECIOUS:      $(SV) $(BENCHES) $(CPPS)

%_tb.vcd:       %.sv %_tb.sv %_tb.cpp
		$(VERILATOR) --trace --cc --top-module $*_tb $*_tb.sv $*.sv --exe $*_tb.cpp
		make -C obj_dir -f V$*_tb.mk V$*_tb
		obj_dir/V$*_tb

clean:
		-@$(MAKE) -f Makefile.coq clean
		rm _CoqProject Makefile.coq
		git clean -Xfd

